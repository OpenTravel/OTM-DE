<?xml version="1.0" encoding="UTF-8"?>
<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.sabre.es</groupId>
		<artifactId>otm-de-parent-pom</artifactId>
		<version>3.1.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

  <groupId>com.sabre.es</groupId>
  <artifactId>product</artifactId>
  <packaging>eclipse-repository</packaging>

  <properties>
    <product-id>OTM-DE</product-id>
  </properties>

  <profiles>
    <profile>
      <id>nightly</id>
      <properties>
        <buildType>-NIGHTLY</buildType>
      </properties>
    </profile>
  </profiles>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-p2-director-plugin</artifactId>
        <version>${tycho-version}</version>
        <executions>
          <execution>
            <id>materialize-products</id>
            <goals>
              <goal>materialize-products</goal>
            </goals>
          </execution>
          <execution>
            <id>archive-products</id>
            <goals>
              <goal>archive-products</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <products>
            <product>
              <id>${product-id}</id>
              <rootFolder>${product-id}-${project.version}</rootFolder>
              <archiveFileName>${product-id}-${unqualifiedVersion}.${buildQualifier}</archiveFileName>
            </product>
          </products>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
